<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--
        In this screen the rubric tells us we must use Linear Layout so their is no choice.
    -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".listing.ListingFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize">
            <LinearLayout
                android:id="@+id/shoe_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/no_shoes_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardElevation="@dimen/cardview_default_elevation">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="@dimen/half_margin"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:text="@string/no_shoes" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_shoe_button"
            android:src="@drawable/ic_add"
            android:backgroundTint="@color/colorAccent"
            android:contentDescription="@string/add_a_shoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/full_margin"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
